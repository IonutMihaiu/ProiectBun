@page
@model ProiectBun.Pages.Soferi.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Toti soferii companiei</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sofer[0].SoferName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sofer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoferName)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
